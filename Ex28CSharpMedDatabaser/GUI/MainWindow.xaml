<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="MwInsertPetButton" Content="Add pet" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="10,30,0,0" Click="MwInsertPetButton_OnClick"/>
        <Button Name="MwInsertOwnerButton"  Content="Add owner" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="10,54,0,0" Click="MwInsertOwnerButton_OnClick"/>
        <Button Name="MwShowPetsButton" Content="Show all pets" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="10,78,0,0" Click="MwShowPetsButton_OnClick"/>
        <Button Name="MwFindOwnerButton" Content="Find owner" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="10,102,0,0"/>
        <Frame Name="MwFrame" Content="" Margin="95,10,9.6,10" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
